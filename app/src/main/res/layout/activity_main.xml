<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kacper.kaccar60.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="191dp">

        <Button
            android:id="@+id/mRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="204dp"
            android:layout_marginEnd="26dp"
            android:text="Right" />

        <Button
            android:id="@+id/mLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/mRight"
            android:layout_alignBottom="@+id/mRight"
            android:layout_marginEnd="31dp"
            android:layout_toStartOf="@+id/mForward"
            android:text="Left" />

        <Button
            android:id="@+id/mForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mRight"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/mRight"
            android:text="Forward" />

        <Button
            android:id="@+id/mBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/mForward"
            android:layout_below="@+id/mLeft"
            android:layout_marginTop="51dp"
            android:text="Back" />

        <Button
            android:id="@+id/mStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText"
            android:layout_alignStart="@+id/mRight"
            android:text="STOP" />




    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
